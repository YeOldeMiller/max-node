<%- include('../includes/header.ejs') %>
  </head>

  <body>
    <%- include('../includes/nav.ejs') %>
    <main>
      <% if(!orders.length) { %>
        <div class="centered"><h1>Nothing there!</h1></div>
      <% } else { %>
        <ul>
          <% orders.forEach(order => { %>
            <li>
              <h1># <%= order.id %></h1>
                <ul>
                  <% order.products.forEach(product => { %>
                    <li><%= product.name %> (<%= product.orderItem.qty %>)</li>
                  <% }); %>
                </ul>
            </li>
          <% }); %>
        </ul>
      <% } %>
    </main>
    <%- include('../includes/footer.ejs') %>